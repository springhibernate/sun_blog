<% if notice %>
<div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="panel panel-default ">
  <div class="panel-heading clearfix">
    <div>
	<%= link_to t('new'), new_user_info_path,:class=>"btn btn-success" %>
    </div>
  </div>
  <table id="list" class="table table-bordered table-striped table-hover table-responsive">
    <thead>
    <tr>
    <td><%=t('operation')%></td>
    <td><%=UserInfo.human_attribute_name(:user_name)%></td>
    <td><%=UserInfo.human_attribute_name(:status)%></td>
    <td><%=UserInfo.human_attribute_name(:last_logtime)%></td>
  </tr>

<% @user_infos.each do |user_info| %>
  <tr>
    <td>
      <%= link_to t('edit'), edit_user_info_path(user_info),:class=>"btn btn-xs btn-success" %>
      <%= link_to t('destroy'), user_info, :confirm => t('are_you_sure'), :method => :delete,:class=>"btn btn-xs btn-danger" %>
    </td>
    <td><%= user_info.user_name %></td>
    <td><%= status_text user_info.status %></td>
    <td><%= lif user_info.last_logtime %></td>
  </tr>
<% end %>
</table>
  <ul class="list-group">
    <li class="list-group-item">
      <%=will_paginate @user_infos%>
    </li>
  </ul>
</div>

