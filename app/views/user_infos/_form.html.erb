<%= form_for(@user_info,:html=>{:class=>'form-horizontal'}) do |f| %>
  <% if @user_info.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading"><%=t('activerecord.errors.template.body')%></div>

      <ul class="list-group">
      <% @user_info.errors.full_messages.each do |msg| %>
        <li class="list-group-item"><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group clearfix">
    <%= f.label :user_name,:class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.text_field :user_name,:class=>"form-control" %></div>
  </div>
  <div class="form-group">
    <%= f.label :password_ori,:class=>"col-sm-2 control-label" %>
    <div class="col-sm-10"><%= f.password_field :password_ori,:class=>"form-control" %></div>
  </div>
    <div class="form-group">
      <%= f.label :password_ori_confirm,:class=>"col-sm-2 control-label" %>
      <div class="col-sm-10"><%= f.password_field :password_ori_confirm,:class=>"form-control" %></div>
    </div>
  <div  class="form-group text-center">
    <%= f.submit t("save"),:class=>"btn btn-success" %>
    <%= link_to t("back"), user_infos_path,:class=>"btn btn-default"  %>
  </div>
<% end %>
