<% if notice %>
<div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="panel panel-default ">
  <div class="panel-heading clearfix">
    <div>
      <%= link_to t('new'), new_blog_path,:class=>"btn btn-success" %>
    </div>
  </div>
  <table id="list" class="table table-bordered table-striped table-hover table-responsive">
    <thead>
    <tr>
    <td><%=t('operation')%></td>
    <td><%=Blog.human_attribute_name(:title)%></td>
    <td><%=Blog.human_attribute_name(:title_en)%></td>
    <td><%=Blog.human_attribute_name(:cat_id)%></td>
    <td><%=Blog.human_attribute_name(:read_count)%></td>
    <td><%=Blog.human_attribute_name(:comment_count)%></td>
    <td><%=Blog.human_attribute_name(:created_at)%></td>
    </tr>
    </thead>
<% @blogs.each do |blog| %>
  <tr>
    <td>
      <%= link_to t('edit'), edit_blog_path(blog),:class=>"btn btn-xs btn-success" %>
      <%= link_to t('destroy'), blog, :confirm => t('are_you_sure'), :method => :delete,:class=>"btn btn-xs btn-danger" %>
    </td>
    <td><%= blog.title %></td>
    <td><%= blog.title_en %></td>
    <td><%= blog.cat.cat_name %></td>
    <td><%= blog.read_count %></td>
    <td><%= blog.comment_count %></td>
    <td><%= l(blog.created_at) %></td>
  </tr>
<% end %>
</table>
  <ul class="list-group">
    <li class="list-group-item">
      <%=will_paginate @cats%>
    </li>
  </ul>
</div>

