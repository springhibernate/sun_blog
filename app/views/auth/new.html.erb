
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>SunBlog</title>
  <%= stylesheet_link_tag :all %>
  <%= stylesheet_link_tag('bootstrap/css/bootstrap.min')%>
  <%= javascript_include_tag 'jquery.min' %>
  <%= javascript_include_tag 'rails' %>
  <%= javascript_include_tag 'application' %>
  <%= javascript_include_tag('/stylesheets/bootstrap/js/bootstrap.min.js')%>
  <%= csrf_meta_tag %>
  <style type="text/css">
    body {
      padding-top: 40px;
      padding-bottom: 40px;
      background-color: #eee;
    }

    .form-signin {
      max-width:500px;
      padding: 15px;
      margin: 0 auto;
    }

    form div{
      margin-bottom:10px;
    }
  </style>
</head>
<body>

<% form_tag({},:class=>"form-signin form-horizontal") do %>
    <div class="form-group text-center">
      <h2 ><%=t("sun_blog")%></h2>
    </div>

    <% if notice %>
        <div class="alert alert-danger"><%= notice %></div>
    <% end %>

    <div class="form-group clearfix">
      <div class="col-sm-3"><%= label_tag :user_name,t(".user_name"),:class=>"control-label"%></div>
      <div class="col-sm-9"><%= text_field_tag :user_name,params[:user_name],:class=>"form-control" %></div>
    </div>

    <div class="form-group clearfix">
      <div class="col-sm-3"><%= label_tag :password,t(".password"),:class=>"control-label"%></div>
      <div class="col-sm-9"><%= password_field_tag :password,params[:password],:class=>"form-control" %></div>
    </div>

    <div class="form-group text-center">
      <%= submit_tag t(".login"),:class=>"btn btn-primary"%>
    </div>
<% end %>
</body>
</html>