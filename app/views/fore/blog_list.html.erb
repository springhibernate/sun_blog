<% @blogs.each do |b| %>
<div class="blog-post">
  <h2 class="blog-post-title">
    <%= link_to b.title,detail_path(b)%>
  </h2>
  <p class="blog-post-meta"><%=t("author")%>&nbsp;&nbsp;&nbsp;&nbsp;<%=t(".post_at")%>&nbsp;<%=l(b.created_at) %>&nbsp;&nbsp;&nbsp;&nbsp;<%=t(".read_count")%>&nbsp;<%= b.read_count %></p>
  <div class="blog-post-intro"><%= sanitize(b.intro)%></div>
</div>
<% end %>

<ul class="list-group">
  <li class="list-group-item">
    <%=will_paginate @blogs%>
  </li>
</ul>
